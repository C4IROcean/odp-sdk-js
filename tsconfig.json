{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"noImplicitAny": false,
		"alwaysStrict": true,
		"noUnusedLocals": true,
		"sourceMap": true,
		"outDir": "dist",
		"declaration": true,
		"typeRoots": ["node_modules/@types/"],
		"lib": ["es2018", "dom"],
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"esModuleInterop": true
	},
	"include": ["source/*", "source/**/*", "samples/*"],
	"exclude": ["node_modules", "tests", "dist"]
}
